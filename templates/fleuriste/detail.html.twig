{% extends 'base.html.twig' %}

{% block title %}Détails du Fleuriste -
	{{ fleuriste.nom }}
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<h1 class="text-3xl font-bold mb-6">{{ fleuriste.nom }}</h1>

		<div class="bg-white shadow-md rounded-lg overflow-hidden p-6">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				<div>
					<h2 class="text-xl font-semibold mb-4">Informations du Fleuriste</h2>
					<p>
						<strong>Nom :</strong>
						{{ fleuriste.nom }}</p>
					<p>
						<strong>Email :</strong>
						{{ fleuriste.user.email }}</p>

					{% if fleuriste.adresses|length > 0 %}
						<h3 class="text-lg font-semibold mt-4 mb-2">Adresses</h3>
						{% for adresse in fleuriste.adresses %}
							<div class="mb-4 p-3 border rounded {% if adresse.principale %}border-green-500{% endif %}">
								<p class="mb-1">{{ adresse.adresseComplete }}</p>
								{% if adresse.principale %}
									<span class="text-sm text-green-600">Adresse principale</span>
								{% endif %}
							</div>
						{% endfor %}
					{% else %}
						<p class="mt-4 text-yellow-600">Aucune adresse renseignée</p>
					{% endif %}
				</div>

				<div>
					<h2 class="text-xl font-semibold mb-4">Services</h2>
					<!-- Ajoutez ici des informations sur les services offerts par le fleuriste -->
					<ul class="list-disc list-inside">
						<li>Livraison à domicile</li>
						<li>Compositions florales sur mesure</li>
						<li>Conseil en botanique</li>
					</ul>
				</div>
			</div>

			<div class="mt-8">
				<h2 class="text-xl font-semibold mb-4">Galerie de photos</h2>
				<!-- Ajoutez ici une galerie de photos ou d'autres informations pertinentes -->
				<p class="text-gray-600">Galerie à venir...</p>
			</div>

			<div class="mt-8">
				<h2 class="text-xl font-semibold mb-4">Nos Fleurs</h2>
				{% if fleurs|length > 0 %}
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
						{% for fleur in fleurs %}
							<div class="bg-white rounded-lg shadow-md overflow-hidden">
								<div class="p-4">
									<h3 class="text-lg font-semibold mb-2">{{ fleur.nom }}</h3>
									<p class="text-gray-600 mb-2">{{ fleur.description|slice(0, 100) }}{% if fleur.description|length > 100 %}...{% endif %}</p>
									<div class="flex justify-between items-center mt-4">
										<span class="text-green-600 font-bold">{{ fleur.prix }}€</span>
										<span class="text-sm text-gray-500">THC: {{ fleur.thc }}%</span>
									</div>
									{% if fleur.stock is not null %}
										<div class="mt-2 text-sm text-gray-500">
											Stock: {{ fleur.stock }} disponible{{ fleur.stock > 1 ? 's' : '' }}
										</div>
									{% endif %}
								</div>
							</div>
						{% endfor %}
					</div>
				{% else %}
					<p class="text-gray-600">Aucune fleur disponible pour le moment.</p>
				{% endif %}
			</div>

			<div class="mt-8 flex justify-between items-center">
				<a href="{{ path('app_fleuriste_index') }}" class="bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded">
					Retour à la liste
				</a>
				<!-- Ajoutez d'autres actions si nécessaire -->
			</div>
		</div>
	</div>
{% endblock %}
