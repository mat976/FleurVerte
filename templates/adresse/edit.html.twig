{% extends 'base.html.twig' %}

{% block title %}Modifier l'adresse{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
            Modifier l'adresse
        </h2>
    </div>

    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}

            <div>
                {{ form_label(form.rue, 'Rue', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.rue, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.rue) }}
            </div>

            <div>
                {{ form_label(form.ville, 'Ville', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.ville, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.ville) }}
            </div>

            <div>
                {{ form_label(form.codePostal, 'Code Postal', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.codePostal, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.codePostal) }}
            </div>

            <div>
                {{ form_label(form.complement, 'Complément', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
                <div class="mt-1">
                    {{ form_widget(form.complement, {'attr': {'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-green-500 focus:border-green-500 sm:text-sm'}}) }}
                </div>
                {{ form_errors(form.complement) }}
            </div>

            <div class="flex items-center">
                <div class="flex items-center h-5">
                    {{ form_widget(form.principale, {'attr': {'class': 'h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 rounded'}}) }}
                </div>
                <div class="ml-3 text-sm">
                    {{ form_label(form.principale, null, {'label_attr': {'class': 'font-medium text-gray-700'}}) }}
                    <p class="text-gray-500">Cette adresse sera utilisée par défaut pour les livraisons</p>
                </div>
            </div>

            <div>
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
                    Enregistrer les modifications
                </button>
            </div>

            <div class="mt-4 text-center">
                <a href="{{ path('app_adresse_index') }}" class="text-sm text-green-600 hover:text-green-500">
                    Retour à la liste des adresses
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
