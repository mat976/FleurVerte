{% extends 'base.html.twig' %}

{% block title %}Résultats de recherche{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-6">Résultats de recherche pour "{{ query }}"</h1>
    
    {% if results|length > 0 %}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for fleur in results %}
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
                    <div class="p-4">
                        <h2 class="text-xl font-semibold mb-2">{{ fleur.nom }}</h2>
                        <p class="text-gray-600 mb-2">{{ fleur.description|slice(0, 100) }}{% if fleur.description|length > 100 %}...{% endif %}</p>
                        <div class="flex justify-between items-center mt-4">
                            <span class="text-green-600 font-bold">{{ fleur.prix }} €</span>
                            <a href="{{ path('app_product_detail', {'id': fleur.id}) }}" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-md text-sm">Voir détails</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="bg-gray-100 p-6 rounded-lg text-center">
            <p class="text-xl">Aucun résultat trouvé pour "{{ query }}"</p>
            <p class="mt-2 text-gray-600">Essayez avec d'autres termes de recherche</p>
        </div>
    {% endif %}
    
    <div class="mt-8">
        <a href="{{ path('app_product') }}" class="text-green-600 hover:text-green-800">
            <i class="fas fa-arrow-left mr-2"></i>Retour à la liste des produits
        </a>
    </div>
</div>
{% endblock %}