{% extends 'base.html.twig' %}

{% block title %}Nouveau Produit
{% endblock %}

{% block body %}
	<div class="flex justify-center items-center min-h-screen bg-gray-100">
		<div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-md">
			<h2 class="text-2xl font-bold mb-6 text-center">Créer un nouveau produit</h2>

			{{ form_start(form) }}
			<div class="mb-4">
				{{ form_label(form.nom, 'Nom du produit:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(form.nom, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500'}}) }}
				{{ form_errors(form.nom) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.description, 'Description:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(form.description, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500', 'rows': '4'}}) }}
				{{ form_errors(form.description) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.prix, 'Prix:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(form.prix, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500'}}) }}
				{{ form_errors(form.prix) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.Thc, 'Taux THC:', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
				{{ form_widget(form.Thc, {'attr': {'class': 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-green-500 focus:border-green-500'}}) }}
				{{ form_errors(form.Thc) }}
			</div>

			<button type="submit" class="w-full bg-green-600 text-white py-2 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
				Créer le produit
			</button>
			{{ form_end(form) }}

			<p class="mt-4 text-center text-sm text-gray-600">
				<a href="{{ path('app_product') }}" class="text-green-600 hover:text-green-500">Retour à la liste des produits</a>
			</p>
		</div>
	</div>
{% endblock %}
