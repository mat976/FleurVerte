{% extends 'base.html.twig' %}

{% block title %}Mon Profil
{% endblock %}

{% block body %}
	<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
		<div class="sm:mx-auto sm:w-full sm:max-w-md">
			<h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
				Mon Profil
			</h2>
		</div>

		<div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
			<div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
				<div class="mb-6 flex justify-center">
					{% if user.avatarName %}
						<img src="{{ asset('uploads/avatars/' ~ user.avatarName) }}" alt="Avatar de {{ user.username }}" class="w-32 h-32 rounded-full">
					{% else %}
						<img src="{{ asset('basic_avatar/1.png') }}" alt="Avatar par défaut" class="w-32 h-32 rounded-full">
					{% endif %}
				</div>

				<div class="space-y-6">
					<div>
						<label class="block text-sm font-medium text-gray-700">Nom d'utilisateur</label>
						<div class="mt-1 p-3 bg-gray-50 rounded-md">
							{{ user.username }}
						</div>
					</div>

					<div>
						<label class="block text-sm font-medium text-gray-700">Email</label>
						<div class="mt-1 p-3 bg-gray-50 rounded-md">
							{{ user.email }}
						</div>
					</div>

					<div>
						<label class="block text-sm font-medium text-gray-700">Rôle</label>
						<div class="mt-1 p-3 bg-gray-50 rounded-md">
							{{ 'ROLE_FLEURISTE' in user.roles ? 'Fleuriste' : 'Client' }}
						</div>
					</div>

					{% if 'ROLE_FLEURISTE' in user.roles and user.fleuriste %}
						<div>
							<label class="block text-sm font-medium text-gray-700">Nom du magasin</label>
							<div class="mt-1 p-3 bg-gray-50 rounded-md">
								{{ user.fleuriste.nom }}
							</div>
						</div>
					{% endif %}

					<div class="flex items-center justify-between mt-6">
						<a href="{{ path('app_profil_edit') }}" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
							Modifier le profil
						</a>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
