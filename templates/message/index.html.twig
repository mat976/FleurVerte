{% extends 'base.html.twig' %}

{% block title %}Mes messages - FleurVerte{% endblock %}

{% block body %}
{# Page Messages - Design moderne #}
<div class="min-h-screen bg-white relative overflow-hidden">
    {# Formes d√©coratives #}
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-20 left-10 w-72 h-72 bg-green-100/30 rounded-full blur-3xl animate-float"></div>
        <div class="absolute bottom-40 right-10 w-96 h-96 bg-emerald-100/20 rounded-full blur-3xl animate-float-slow"></div>
        <div class="absolute top-40 right-1/4 text-green-200/20 text-8xl animate-pulse-soft">üí¨</div>
    </div>

    <div class="max-w-4xl mx-auto px-4 py-16 relative z-10">
        {# Header #}
        <div class="text-center mb-12">
            <div class="inline-flex items-center gap-2 px-5 py-2 bg-green-50/80 backdrop-blur-sm rounded-full border border-green-100 mb-6">
                <i class="fas fa-comments text-green-600"></i>
                <span class="text-green-700 font-medium text-sm">Messagerie</span>
            </div>
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Mes Conversations</h1>
            <p class="text-lg text-gray-500">√âchangez avec vos fleuristes pr√©f√©r√©s</p>
        </div>

        {# Contenu #}
        {% if conversations is empty %}
            <div class="max-w-lg mx-auto text-center bg-white/70 backdrop-blur-sm rounded-3xl p-12 border border-white/50 shadow-lg">
                <div class="w-24 h-24 bg-green-50 rounded-full flex items-center justify-center mx-auto mb-6">
                    <i class="fas fa-inbox text-green-400 text-4xl"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-900 mb-3">Aucune conversation</h3>
                <p class="text-gray-500 mb-8">Vous n'avez pas encore d√©marr√© de conversation.</p>
                {% if app.user.isClient() %}
                    <a href="{{ path('app_fleuriste_index') }}" class="inline-flex items-center gap-2 bg-green-500 hover:bg-green-600 text-white px-8 py-4 rounded-xl font-semibold transition-all hover:shadow-lg hover:-translate-y-0.5">
                        <i class="fas fa-store"></i>
                        D√©couvrir les fleuristes
                    </a>
                {% else %}
                    <p class="text-gray-400 text-sm">Les clients pourront vous contacter depuis votre boutique.</p>
                {% endif %}
            </div>
        {% else %}
            {# Liste des conversations #}
            <div class="bg-white/70 backdrop-blur-sm rounded-3xl border border-white/50 shadow-lg overflow-hidden">
                <div class="divide-y divide-gray-100">
                    {% for conversation in conversations %}
                        {% set unreadCount = conversation.countMessagesNonLus(app.user) %}
                        {% if app.user.isClient() %}
                            {% set otherUser = conversation.fleuriste.user %}
                            {% set otherName = conversation.fleuriste.nom %}
                        {% else %}
                            {% set otherUser = conversation.client.user %}
                            {% set otherName = otherUser.username %}
                        {% endif %}
                        
                        <a href="{{ path('app_conversation_show', {'id': conversation.id}) }}" 
                            class="flex items-center gap-4 p-5 hover:bg-white/50 transition-all group {% if unreadCount > 0 %}bg-green-50/50{% endif %}">
                            
                            {# Avatar #}
                            <div class="relative flex-shrink-0">
                                <img src="{{ otherUser.avatarName ? asset('uploads/avatars/' ~ otherUser.avatarName) : asset('basic_avatar/1.png') }}" 
                                    alt="{{ otherName }}" 
                                    class="w-14 h-14 rounded-full object-cover border-2 border-white shadow group-hover:scale-105 transition-transform">
                                {# Indicateur en ligne #}
                                <span class="absolute bottom-0 right-0 w-4 h-4 bg-green-500 border-2 border-white rounded-full"></span>
                            </div>
                            
                            {# Infos #}
                            <div class="flex-1 min-w-0">
                                <div class="flex items-center justify-between mb-1">
                                    <h3 class="font-bold text-gray-900 truncate group-hover:text-green-600 transition-colors">{{ otherName }}</h3>
                                    <span class="text-xs text-gray-400 flex-shrink-0 ml-2">{{ conversation.dateDerniereActivite|date('d/m H:i') }}</span>
                                </div>
                                <div class="flex items-center gap-2">
                                    {% if conversation.messages|length > 0 %}
                                        {% set lastMessage = conversation.messages|last %}
                                        <p class="text-sm text-gray-500 truncate">
                                            {% if lastMessage.expediteur == app.user %}
                                                <span class="text-gray-400">Vous : </span>
                                            {% endif %}
                                            {{ lastMessage.contenu|striptags|slice(0, 40) }}{% if lastMessage.contenu|length > 40 %}...{% endif %}
                                        </p>
                                    {% else %}
                                        <p class="text-sm text-gray-400 italic">D√©marrer la conversation</p>
                                    {% endif %}
                                </div>
                            </div>
                            
                            {# Badge non lu #}
                            {% if unreadCount > 0 %}
                                <div class="flex-shrink-0">
                                    <span class="w-6 h-6 bg-green-500 text-white text-xs font-bold rounded-full flex items-center justify-center">
                                        {{ unreadCount }}
                                    </span>
                                </div>
                            {% else %}
                                <i class="fas fa-chevron-right text-gray-300 group-hover:text-green-500 transition-colors"></i>
                            {% endif %}
                        </a>
                    {% endfor %}
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endblock %}